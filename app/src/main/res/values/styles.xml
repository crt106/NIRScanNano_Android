<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/primary_light</item>
    </style>

    <style name="AppTheme_No_ActionBar" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/primary_light</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme_No_ActionBar">
        <!-- 设置 toolbar 溢出菜单的文字的颜色 -->
        <item name="android:textColor">@color/primary_light</item>
        <item name="actionMenuTextColor">@color/primary_light</item>
        <item name="colorButtonNormal">@color/primary_light</item>
        <item name="colorControlNormal">@color/primary_light</item>
    </style>

    <style name="CommonButton" parent="Widget.MaterialComponents.Button">
        <!--公用button样式-->
        <item name="android:backgroundTint">@drawable/common_button_bac</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="CommonDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
    </style>



</resources>
